{
  "name": "dom-event-key",
  "version": "1.0.2",
  "description": "dom-event-key simplifies handling browser keyboard events",
  "license": "MIT",
  "author": "ofk <ofkjpn+npm@gmail.com> (https://github.com/ofk/)",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "vite",
    "lint": "run-s lint:**",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check .",
    "lint:prettier-package-json": "prettier-package-json --list-different",
    "lint:tsc": "tsc",
    "lint-fix": "run-s lint-fix:**",
    "lint-fix:eslint": "eslint --fix .",
    "lint-fix:prettier": "prettier --write .",
    "lint-fix:prettier-package-json": "prettier-package-json --write",
    "lint-fix:tsc": "npm run lint:tsc",
    "prepare": "husky",
    "prepublishOnly": "npm run build",
    "test": "vitest run"
  },
  "sideEffects": false,
  "devDependencies": {
    "@ofk/eslint-config-recommend": "^7.2.2",
    "eslint": "^9.23.0",
    "husky": "^9.1.7",
    "jsdom": "^26.0.0",
    "lint-staged": "^15.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "prettier-package-json": "^2.8.0",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2",
    "vite": "^6.2.3",
    "vitest": "^3.0.9"
  },
  "keywords": [],
  "lint-staged": {
    "package.json": "prettier-package-json --write",
    "*.{md,json,html}": "prettier --write",
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --ext .js,.jsx,.ts,.tsx",
      "prettier --write"
    ]
  },
  "packageManager": "npm@10.8.0+sha512.c21f77b91733829ec70e73cc88b5dc0a4bf685a81d252d3327d293ff7d5dd05a173f4dbeaa037600ec29696f397f14569229e5dab10b7cfc3e0a30575b8f3f8d"
}
